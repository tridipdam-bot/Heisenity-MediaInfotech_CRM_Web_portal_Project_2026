{
  "name": "@crmdemo/backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc && copyfiles -u 2 \"src/swagger/openapi.yaml\" dist/swagger",
    "start": "node -r ./module-alias-register.js dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "db:start": "docker-compose up -d mysql",
    "db:stop": "docker-compose down",
    "db:restart": "docker-compose restart mysql",
    "db:logs": "docker-compose logs -f mysql",
    "db:reset": "docker-compose down -v && docker-compose up -d mysql",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@crmdemo/shared": "*",
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/multer": "^2.0.0",
    "@types/puppeteer": "^5.4.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "module-alias": "^2.2.3",
    "multer": "^2.0.2",
    "pg": "^8.12.0",
    "puppeteer": "^24.34.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-model-validator": "^3.0.21",
    "swagger-ui-express": "^5.0.1",
    "ua-parser-js": "^2.0.7",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "types": "./dist/index.d.ts"
}
