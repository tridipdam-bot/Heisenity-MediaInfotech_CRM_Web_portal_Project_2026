generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Admin {
  id                  String               @id @default(cuid())
  adminId             String               @unique
  name                String
  email               String               @unique
  password            String
  phone               String?
  status              String               @default("ACTIVE")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  adminOverrides      AttendanceOverride[]
  assignedTeamLeaders FieldEngineer[]      @relation("AdminAssignedTeamLeaders")
  sessions            UserSession[]

  @@map("admins")
}

model Team {
  id          String          @id @default(cuid())
  name        String          @unique
  description String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  members     FieldEngineer[]

  @@map("teams")
}

model FieldEngineer {
  id                  String               @id @default(cuid())
  name                String
  employeeId          String               @unique
  email               String               @unique
  password            String
  phone               String?
  teamId              String?
  isTeamLeader        Boolean              @default(false)
  assignedBy          String?
  status              String               @default("ACTIVE")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  dailyLocations      DailyLocation[]
  attendances         Attendance[]
  attendanceOverrides AttendanceOverride[]
  tasks               Task[]
  team                Team?                @relation(fields: [teamId], references: [id])
  assignedAdmin       Admin?               @relation("AdminAssignedTeamLeaders", fields: [assignedBy], references: [id])
  sessions            UserSession[]

  @@index([teamId])
  @@index([assignedBy], map: "field_engineers_assignedBy_fkey")
  @@map("field_engineers")
}

model DailyLocation {
  id         String        @id @default(cuid())
  employeeId String
  date       DateTime      @db.Date
  latitude   Decimal       @db.Decimal(10, 8)
  longitude  Decimal       @db.Decimal(11, 8)
  radius     Int           @default(100)
  address    String?
  city       String?
  state      String?
  startTime  DateTime
  endTime    DateTime
  assignedBy String
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  employee   FieldEngineer @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@map("daily_locations")
}

model Attendance {
  id           String           @id @default(cuid())
  date         DateTime         @db.Date
  clockIn      DateTime?
  clockOut     DateTime?
  status       AttendanceStatus @default(PRESENT)
  location     String?
  ipAddress    String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  attemptCount AttemptCount     @default(ZERO)
  deviceInfo   String?
  latitude     Decimal?         @db.Decimal(10, 8)
  locked       Boolean          @default(false)
  lockedReason String?          @db.Text
  longitude    Decimal?         @db.Decimal(11, 8)
  photo        String?          @db.LongText
  taskId       String?
  taskStartTime String?
  taskEndTime   String?
  taskLocation  String?
  source       AttendanceSource @default(SELF)
  employeeId   String
  employee     FieldEngineer    @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  assignedTask Task?            @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@unique([employeeId, date])
  @@index([date])
  @@index([status])
  @@index([taskId])
  @@map("attendances")
}

model AttendanceOverride {
  id         String           @id @default(cuid())
  employeeId String
  date       DateTime         @db.Date
  adminId    String
  oldStatus  AttendanceStatus
  newStatus  AttendanceStatus
  reason     String           @db.Text
  timestamp  DateTime         @default(now())
  admin      Admin            @relation(fields: [adminId], references: [id], onDelete: Cascade)
  employee   FieldEngineer    @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([adminId])
  @@index([date])
  @@map("attendance_overrides")
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  MARKDOWN
}

enum AttendanceSource {
  SELF
  ADMIN
}

model Task {
  id          String        @id @default(cuid())
  employeeId  String
  title       String
  description String        @db.Text
  category    String?
  location    String?
  startTime   String?
  endTime     String?
  assignedBy  String
  assignedAt  DateTime      @default(now())
  status      TaskStatus    @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  employee    FieldEngineer @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  attendances Attendance[]

  @@index([employeeId])
  @@index([assignedAt])
  @@index([status])
  @@map("tasks")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum AttemptCount {
  ZERO
  ONE
  TWO
  THREE
}

model UserSession {
  id           String        @id @default(cuid())
  sessionToken String        @unique
  adminId      String?
  employeeId   String?
  userType     UserType
  deviceInfo   String?
  ipAddress    String?
  isActive     Boolean       @default(true)
  lastActivity DateTime      @default(now())
  createdAt    DateTime      @default(now())
  expiresAt    DateTime
  
  // Relations
  admin        Admin?        @relation(fields: [adminId], references: [id], onDelete: Cascade)
  employee     FieldEngineer? @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([employeeId])
  @@index([sessionToken])
  @@index([isActive])
  @@map("user_sessions")
}

enum UserType {
  ADMIN
  EMPLOYEE
}
